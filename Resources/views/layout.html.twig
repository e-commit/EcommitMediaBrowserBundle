<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Media Browser</title>
        {{ render(controller("EcommitMediaBrowserBundle:Default:header")) }}
        {% javascripts filter='?yui_js' output='js/compiled/media-browser.js'
            '@EcommitMediaBrowserBundle/Resources/public/js/tiny_mce_popup.js' 
            '@EcommitMediaBrowserBundle/Resources/public/js/manager.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% stylesheets '@EcommitMediaBrowserBundle/Resources/public/css/manager.css' filter='?yui_css' output='css/compiled/media-browser.css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
            {% block body %}{% endblock %}
    </body>
</html>
